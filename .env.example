# Database (Neon)
DATABASE_URL=postgresql://username:password@host.neon.tech/dbname?sslmode=require
DIRECT_URL=postgresql://username:password@host.neon.tech/dbname

# Redis (for BullMQ job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# Google Maps Scraper (Gosom)
GOSOM_API_URL=http://localhost:8080

# Email Service (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxx
FROM_EMAIL=noreply@yourdomain.com

# Email Discovery (Optional - for Hunter.io fallback)
HUNTER_IO_API_KEY=

# Scraping (Optional - for proxy support)
PROXY_URL=

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3003
NEXTAUTH_URL=http://localhost:3003

# NextAuth (Optional - for future authentication)
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# Email Warm-up Settings
WARM_UP_ENABLED=true
MAX_EMAILS_PER_DAY=100

# Sender Settings (Optional defaults)
DEFAULT_SENDER_NAME=Your Name
DEFAULT_SENDER_COMPANY=Your Company
DEFAULT_REPLY_TO_EMAIL=reply@yourdomain.com

# Environment
NODE_ENV=development
